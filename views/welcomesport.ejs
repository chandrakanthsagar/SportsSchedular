
    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta name="csrf-token" content="<%= csrfToken %>">
      <title>Sports Scheduler</title>
      <script src="https://cdn.tailwindcss.com"></script>
      <link rel="stylesheet" href="/css/styles.css" />
      <style>
        .box-view {
          max-width: 800px;
          margin: 0 auto;
          padding: 20px;
          background-color: #ffffff;
          border: 1px solid #000000;
          border-radius: 8px;
        }
      </style>
      <script>
        var token = document
          .querySelector('meta[name="csrf-token"]')
          .getAttribute("content");
    
        function deleteSport(id) {
          fetch(`/sports/${id}`, {
            method: "delete",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              "_csrf": token
            })
          })
            .then((res) => {
              if (res.ok) {
                window.location.replace('/WelcomeAdmin');
              }
            })
            .catch((err) => console.error(err));
        }
      </script>
    </head>
    <body class="bg-blue-100">
        <br>
        <br>
        <br>
        <br>
      <div class="box-view">
        <div class="flex justify-between px-4 py-2">
          <a href="/Welcomeadmin" class="underline  text-2xl text-black-500">Home</a>
          
          <a href="/signout" class="text-black font-bold text-2xl underline ">Signout</a>
          
        </div>
    
        <h1 class="text-center text-4xl my-8 text-green-500">Session Management</h1>
        <h1 class="text-center text-4xl my-4 text-green-700"><%= sport.sportname %></h1>
    
        <% if (loggedInAdmin === sport.adminid) { %>
          <div class="flex justify-end px-4 py-2">
            <div class="text-right">
              <a href="/welcomeAdmin" onclick="deleteSport(<%= sport.id %>)" class="text-black-500 underline">Delete Sport</a>
            </div>
            <div class="text-right ml-4">
              <a href="/Editsport/<%= sport.id %>" class="text-black-500 underline">Edit Sport</a>
            </div>
          </div>
        <% } %>
    
        <div class="text-center my-4">
          <a href="/sports1/<%= sportid %>" class="text-black-500 underline">Create a new Session</a>
        </div>
    
        <div class="text-center my-8">
          <h1 class="text-4xl text-green-500">View Sessions</h1>
          <hr class="border-gray-400">
        </div>
    
        <div class="text-center my-4">
          <a href="/sessionviewyou/<%= sportid %>" class="text-black-500 underline">View your sessions</a>
          <br>
          <a href="/sessionviewothers/<%= sportid %>" class="text-black-500 underline">View Sessions created by others</a>
        </div>
      </div>
    </body>
    </html>
    
</body>
</html>
