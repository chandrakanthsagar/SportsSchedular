<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Sports Scheduler</title>
    <script>
    var token = document
    .querySelector('meta[name="csrf-token"]')
    .getAttribute("content");

  function deleteSport(id) {
    fetch(`/sports/${id}`, {
      method: "delete",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        "_csrf": token
      })
    })
      .then((res) => {
        if (res.ok) {
            window.location.replace('/adminpage')
        }
      })
      .catch((err) => console.error(err));
  }
</script>
</head>
<body class="bg-blue-100">
    <a href="/Welcomeadmin" class="underline">Home</a><span>> <%= sport.sportname %></span>
    <div class="text-right">
        <a href="/editsport/<%= sportid %>" mr-4 text-l font-serif text-sky-900 hover:underline>Editsport</a>
        <a href="/allsports" class="" text-l font-serif text-sky-900 hover:underline onclick="deletesport(<%= sport.id %>)" >deleteSport</a>
    </div>

    
    <h1 class="text-center text-4xl my-8">Sessions</h1>
    <h1 class="text-center text-4xl my-4 " ><%= sport.sportname %></h1>

    <div class="text-center my-4">
        <a href="/sports1/<%= sportid %>" class="text-blue-500">Create a new Session</a>
    </div>
    <div class="text-center my-4">
        <a href="" class="text-blue-500">View previous sessions</a>
    </div>
</body>
</html>
