<!DOCTYPE html>
<html lang="en">
<head>
    
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css" />
  <title>Sports Scheduler</title>
  <script>
        var token = document
            .querySelector('meta[name="csrf-token"]')
            .getAttribute("content");

        function deleteSport(id) {
            fetch(`/sports/${id}`, {
                method: "delete",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.replace('/WelcomeAdmin');
                    }
                })
                .catch((err) => console.error(err));
        }
    </script>
</head>
<body class="bg-blue-100">
    <div class="flex justify-between">
        <a href="/Welcomeadmin" class="underline">Home</a>
        <span><%= sport.sportname %></span>
    </div>

    <h1 class="text-center text-4xl my-8">Sessions</h1>
    <h1 class="text-center text-4xl my-4 "><%= sport.sportname %></h1>

    <% if (loggedInAdmin === sport.adminid) { %>
        <div class="flex justify-end">
            <div class="text-right">
                <a href="/welcomeAdmin" onclick="deleteSport(<%= sport.id %>)" class="text-blue-500">Delete Sport</a>
            </div>
            <div class="text-right ml-4">
                <a href="/Editsport/<%= sport.id %>" class="text-blue-500">Edit Sport</a>
            </div>
        </div>
    <% } %>

    <div class="text-center my-4">
        <a href="/sports1/<%= sportid %>" class="text-blue-500">Create a new Session</a>
    </div>
    <div class="text-center my-4">
        <a href="" class="text-blue-500">View previous sessions</a>
    </div>
</body>
</html>
