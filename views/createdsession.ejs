<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Sports Scheduler</title>
    <script>
      var token = document
          .querySelector('meta[name="csrf-token"]')
          .getAttribute("content")
          
      function deletePlayer(id) {
          fetch(`/player/${id}`, {
              method: "delete",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                  "_csrf": token
              })
          })
              .then((res) => {
                  if (res.ok) {
                      window.location.reload()
                  }
              })
              .catch((err) => console.error(err))
      }

      function joinSession(id) {
            fetch(`/joinsession/${id}`, {
                method: "post",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload()
                    }
                })
                .catch((err) => console.error(err))
        }
      </script>
</head>

<body class="bg-blue-100">
  <div>
    <%- include('header') %>
  </div>
       <a href="/sessionpage/<%=session.sportname%>" class="text-red-900 text-sm px-2 py-1 absolute top-2 left-2">Back</a>
        <a href="/signout" class="text-red-900 text-sm px-2 py-1 absolute top-2 right-2">Signout</a>
   
        <div class="p-4 bg-red-50 mt-4">
            <h1 class="text-xl mb-4 text-center text-red-900"><%= sport.sportname %> session#<%= session.id%></h1>
            <p class="border border-gray-300 rounded p-4">
                This session is scheduled for <%= session.date %> and will be played at <%= session.venue %>.
            </p>
            <h1 class="mt-4 text-black">Players</h1>
            <div>
                console.log(<%= players %>); 
                
                <% if (session.adminId == adminId) { %>
                    <% for (var i = 0; i < players.length; i++) { %>
                    <div class="flex items-center bg-gray-900 p-2 rounded">
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= players[i].username %></p>
    <a class="trash-icon ml-2" href="#" onclick="deletePlayer(<%=players[i].id%>)">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-6 h-6">
            <path fill="currentColor" d="M304 160v-32c0-17.69-14.33-32-32-32h-48c-17.67 0-32 14.31-32 32v32h-64v-32C128 78.19 206.19 0 298.67 0h50.66C345.81 0 416 70.24 416 160v32z m-48 256H192v-96h64zm-160 0v-96h64v96zm224 0h-64v-96h64z"/>
        </svg>
    </a>
</div>

                    <% if ((i + 1) % 5 === 0) { %>
                        <div class="col-span-5"></div>
                    <% } %>
                    <% } %>
                <% } %>
            
                <% if (session.playerId == playerId) { %>
                    <% for (var i = 0; i < players.length; i++) { %>
                    <div class="Sport-Item flex items-center">
                        <div class="flex items-center bg-gray-900 p-1 rounded">
                            <p class="mb-3 p-2 font-normal text-gray-700 dark:text-gray-400"><%= players[i].username %></p>
                        </div>
                    </div>
                    <% if ((i + 1) % 5 === 0) { %>
                        <div class="col-span-5"></div>
                    <% } %>
                    <% } %>
                <% } %>
            </div>
            
</body>
</html>
